<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Sign_Up_Password_Text"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:hint="password:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sign_Up_Name_Text" />

    <EditText
        android:id="@+id/Sign_Up_Name_Text"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="62dp"
        android:ems="10"
        android:hint="name:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="253dp"
        android:onClick="signIn"
        android:text="SIgn IN"
        app:layout_constraintStart_toStartOf="@+id/Sign_Up_Password_Text"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:onClick="signUp"
        android:text="sÄ±gn up"
        app:layout_constraintEnd_toEndOf="@+id/Sign_Up_Password_Text"
        app:layout_constraintTop_toBottomOf="@+id/Sign_Up_Password_Text" />
</androidx.constraintlayout.widget.ConstraintLayout>